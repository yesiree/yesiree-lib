{
  "name": "@yesiree/htmlc",
  "version": "0.0.12",
  "description": "A simple tool for compiling HTML files",
  "type": "module",
  "files": [
    "./lib/cli.js",
    "./lib/index.js",
    "./lib/utils.js"
  ],
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "test-watch": "node lib/cli.js -m -c -w -s test/src/ -d .ignore/",
    "example": "node lib/cli.js -m -c -i -o **/*.txt -s test/src/ -d .ignore/ ",
    "compare": "node test/equals.js .ignore/index.html test/expected.html",
    "publish": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yesiree/htmlc.git"
  },
  "keywords": [
    "html",
    "compile",
    "minify",
    "css",
    "sass",
    "scss",
    "style",
    "script",
    "javascript",
    "js"
  ],
  "author": "Trevor Reed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yesiree/htmlc/issues"
  },
  "homepage": "https://github.com/yesiree/htmlc#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "diff": "^7.0.0",
    "fast-glob": "^3.3.2",
    "html-minifier-terser": "^7.2.0",
    "js-beautify": "^1.15.1",
    "jsdom": "^20.0.0",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "sass": "^1.80.6",
    "sharp": "^0.33.5",
    "terser": "^5.36.0"
  },
  "devDependencies": {
    "colors": "^1.4.0"
  }
}
